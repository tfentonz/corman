<h1>Listing correspondences</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>File</th>
      <th>Folio</th>
      <th>Folio date</th>
      <th>Review date</th>
      <th>Meeting</th>
      <th>Reference</th>
      <th>Officer</th>
      <th>Correspondent</th>
      <th>Type</th>
      <th>Summary</th>
      <th>Details</th>
      <th>Linkto</th>
      <th>Linkfrom</th>
      <th>Note count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @correspondences.each do |correspondence| %>
      <tr>
        <td><%= correspondence.file_id %></td>
        <td><%= correspondence.folio_id %></td>
        <td><%= correspondence.folio_date %></td>
        <td><%= correspondence.review_date %></td>
        <td><%= correspondence.meeting_id %></td>
        <td><%= correspondence.reference %></td>
        <td><%= correspondence.officer_id %></td>
        <td><%= correspondence.correspondent_id %></td>
        <td><%= correspondence.type_id %></td>
        <td><%= correspondence.summary %></td>
        <td><%= correspondence.details %></td>
        <td><%= correspondence.linkto %></td>
        <td><%= correspondence.linkfrom %></td>
        <td><%= correspondence.note_count %></td>
        <td><%= link_to 'Show', correspondence %></td>
        <td><%= link_to 'Edit', edit_correspondence_path(correspondence) %></td>
        <td><%= link_to 'Destroy', correspondence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Correspondence', new_correspondence_path, class: 'btn btn-default' %>

<br>

<%= paginate @correspondences %>
