<h1>Listing Correspondents</h1>

<div class="row">
  <div class="col-md-2">
    <%= link_to content_tag(:button, content_tag(:span, nil, class: 'glyphicon glyphicon-plus') + ' New Correspondent', class: 'btn btn-default'), new_correspondent_path %>
  </div>
  <div class="col-md-10 text-right">
    <%= paginate @correspondents %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-1">ID</th>
      <th>Name</th>
      <th>Street</th>
      <th>Town</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Description</th>
      <th class="col-md-2"></th>
    </tr>
  </thead>

  <tbody>
    <% @correspondents.each do |correspondent| %>
      <tr>
        <td><%= link_to correspondent.id, correspondent %></td>
        <td><%= correspondent.name %></td>
        <td><%= correspondent.street %></td>
        <td><%= correspondent.town %></td>
        <td><%= correspondent.state %></td>
        <td><%= correspondent.postcode %></td>
        <td><%= correspondent.description %></td>
        <td class="text-right text-nowrap">
          <%= link_to content_tag(:button, content_tag(:span, nil, class: 'glyphicon glyphicon-edit') + ' Edit', class: 'btn btn-default btn-sm'), edit_correspondent_path(correspondent) %>
          <%= link_to content_tag(:button, content_tag(:span, nil, class: 'glyphicon glyphicon-trash') + ' Delete', class: 'btn btn-default btn-sm'), correspondent, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
