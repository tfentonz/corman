<%= form_for(@type, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
  <% if @type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@type.errors.count, "error") %> prohibited this type from being saved:</h2>

      <ul>
      <% @type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-sm">
    <%= f.label :description, class: 'col-md-1 control-label' %>
    <div class="col-md-4">
      <%= f.text_field :description, class: 'form-control', autofocus: true, required: true, size: 60, maxlength: 60 %>
    </div>
  </div>
  <div class="form-group form-group-sm">
    <div class="col-md-offset-1 col-md-11">
      <%= f.submit class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Cancel', types_path, class: 'btn btn-sm btn-default' %>
    </div>
  </div>
<% end %>
