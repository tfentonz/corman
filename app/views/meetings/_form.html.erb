<%= form_for(@meeting, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% @meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-sm">
    <%= f.label :date, class: 'col-md-1 control-label' %>
    <div class="col-md-11">
      <%= f.date_select :date %>
    </div>
  </div>
  <div class="form-group form-group-sm">
    <%= f.label :description, class: 'col-md-1 control-label' %>
    <div class="col-md-3">
      <%= f.text_field :description, class: 'form-control', size: 45, maxlength: 45, required: true %>
    </div>
  </div>
  <div class="form-group form-group-sm">
    <div class="col-md-offset-1 col-md-11">
      <%= f.submit class: 'btn  btn-sm btn-primary' %>
      <%= link_to 'Cancel', meetings_path, class: 'btn btn-sm btn-default' %>
    </div>
  </div>
<% end %>
